---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
import HeroText from "../components/HeroText.astro";
const seo = {
	title: "Contact Us - Get in Touch with Sastika Solutions",
	description:
		"Need help with visa assistance, job placements, or recruitment services? Contact Sastika Solutions today for seamless global career support.",
	keywords:
		"contact Sastika Solutions, visa assistance support, global recruitment, Chennai-based recruitment agency",
};

const serviceCards = [
	{
		img: "/service/img1.svg",
		title: "Global Recruitment Solutions",
		desc: "We connect skilled Indian professionals with global employers, providing tailored job matches across diverse industries such as IT, healthcare, engineering, and finance.",
	},
	{
		img: "/service/img2.svg",
		title: "Visa Assistance",
		desc: "Navigating international visa processes is made simple with our expert support. We assist with documentation, submission, and compliance, ensuring a hassle-free experience for candidates embarking on global careers.",
	},
	{
		img: "/service/img3.svg",
		title: "Abroad Education Assistance",
		desc: "We provide comprehensive support for students aspiring to study overseas. From choosing the right university and course to visa documentation and application submission, our expert team ensures a seamless and hassle-free education abroad experience.",
	},
	{
		img: "/service/img4.svg",
		title: "Training and Development",
		desc: "We empower professionals to excel in global markets through tailored training programs. From interview coaching to skill enhancement, we prepare candidates to meet international job standards.",
	},
	{
		img: "/service/img5.svg",
		title: "Employer Support Services",
		desc: "We provide global employers with end-to-end hiring solutions, including comprehensive candidate screening, thorough shortlisting, and efficient recruitment management.",
	},
	{
		img: "/service/img6.svg",
		title: "Long-Term Relationship Building",
		desc: "Navigating international visa processes is made simple with our expert support. We assist with documentation, submission, and compliance, ensuring a hassle-free experience.",
	},
];
---

<Layout {...seo}>
	<Navbar currentPath="/services" />
	<section class="relative">
		<!-- Background image -->
		<div class="absolute inset-0 -z-10">
			<img
				src="/hero-image/service.webp"
				alt="Background"
				class="w-full h-full object-cover brightness-75"
			/>
		</div>

		<!-- Overlay to darken the image -->
		<div class="absolute inset-0 bg-black/40 z-10"></div>

		<!-- Hero text component -->
		<div class="relative z-20">
			<HeroText />
		</div>
	</section>

	<main
		class="relative min-h-screen flex flex-col items-center py-10 px-6 z-30"
	>
		<!-- Services Section -->
		<section class="containers -my-24">
			<div class="grid grid-cols-1 lg:grid-cols-3 lg:gap-6 gap-y-14">
				{
					serviceCards.slice(0, 3).map((card) => (
						<div class="p-6 w-72 h-64 rounded-lg shadow-md text-center relative bg-white">
							<div class="w-12 h-12 mx-auto bg-[#D40000] text-white rounded-md flex items-center justify-center mb-4 absolute -top-5 left-1/2 -translate-x-1/2">
								<img
									src={card.img}
									alt={card.title}
									class="object-cover"
								/>
							</div>
							<h3 class="text-lg font-bold mt-2">{card.title}</h3>
							<p class="text-sm text-gray-600 mt-2">
								{card.desc}
							</p>
						</div>
					))
				}
			</div>
			<div
				class="grid grid-cols-1 lg:grid-cols-3 mt-14 lg:mt-16 lg:gap-6 gap-y-14"
			>
				{
					serviceCards.slice(3, 6).map((card) => (
						<div class="p-6 w-72 h-64 rounded-lg shadow-md text-center relative bg-white">
							<div class="w-12 h-12 mx-auto bg-[#D40000] text-white rounded-md flex items-center justify-center mb-4 absolute -top-5 left-1/2 -translate-x-1/2">
								<img
									src={card.img}
									alt={card.title}
									class="object-cover"
								/>
							</div>
							<h3 class="text-lg font-bold mt-2">{card.title}</h3>
							<p class="text-sm text-gray-600 mt-2">
								{card.desc}
							</p>
						</div>
					))
				}
			</div>
		</section>
	</main>
	<div class="mx-7">
		<div
			class="bg-gradient-to-r from-orange-600 via-orange-500 to-amber-400 rounded-lg p-8 text-white flex flex-col sm:flex-row items-start sm:items-center justify-between max-w-4xl mb-8 mx-auto shadow-lg"
		>
			<!-- Text Section -->
			<div>
				<h2 class="text-2xl font-bold">
					Ready to Take the First Step?
				</h2>
				<p class="mt-2 text-sm sm:text-base">
					Step into endless possibilities with Sastika Solutions.<br
					/>
					Whether finding talent or chasing dreams abroad, we<br /> make
					it seamless and effortless.
				</p>
			</div>
			<br />
			<!-- Button -->
			<div class="flex">
				<a
					href="/contact"
					class="mt-4 sm:mt-0 sm:ml-4 bg-white text-orange-500 font-semibold py-2 px-6 rounded-full shadow-lg flex items-center space-x-2 hover:bg-gray-100 transition"
				>
					<span>Get in Touch</span>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="w-4 h-4"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
						stroke-width="2"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M9 5l7 7-7 7"></path>
					</svg>
				</a>
			</div>
		</div>
	</div>
	<Footer />
</Layout>
