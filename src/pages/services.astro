---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
import HeroText from "../components/HeroText.astro";
const seo = {
	title: "Contact Us - Get in Touch with Sastika Solutions",
	description:
		"Need help with visa assistance, job placements, or recruitment services? Contact Sastika Solutions today for seamless global career support.",
	keywords:
		"contact Sastika Solutions, visa assistance support, global recruitment, Chennai-based recruitment agency",
};
---

<Layout {...seo}>
	<Navbar currentPath="/services" />
	<section class="relative">
		<!-- Background image -->
		<div class="absolute inset-0 -z-10">
			<img
				src="/hero-image/service.webp"
				alt="Background"
				class="w-full h-full object-cover brightness-75"
			/>
		</div>

		<!-- Overlay to darken the image -->
		<div class="absolute inset-0 bg-black/40 z-10"></div>

		<!-- Hero text component -->
		<div class="relative z-20">
			<HeroText />
		</div>
	</section>
	<main
		class="relative min-h-screen flex flex-col items-center py-10 px-6 z-30"
	>
		<!-- Services Section -->
		<section class="containers -my-24">
			<div class="grid grid-cols-1 lg:grid-cols-3 lg:gap-6 gap-y-14">
				<!-- Card 1 -->
				<div
					class="p-6 w-72 h-64 rounded-lg shadow-md text-center relative bg-white"
				>
					<div
						class="w-12 h-12 mx-auto bg-[#D40000] text-white rounded-md flex items-center justify-center mb-4 absolute -top-5 left-1/2 -translate-x-1/2"
					>
						<img
							src="/service/img1.svg"
							alt="Teamwork"
							class="object-cover"
						/>
					</div>
					<h3 class="text-lg font-bold mt-2">
						Global Recruitment Solutions
					</h3>
					<p class="text-sm text-gray-600 mt-2">
						We connect skilled Indian professionals with global
						employers, providing tailored job matches across diverse
						industries such as IT, healthcare, engineering, and
						finance.
					</p>
				</div>
				<!-- Card 2 -->
				<div
					class="p-6 w-72 h-64 rounded-lg shadow-md text-center relative bg-white"
				>
					<div
						class="w-12 h-12 mx-auto bg-[#D40000] text-white rounded-md flex items-center justify-center mb-4 absolute -top-5 left-1/2 -translate-x-1/2"
					>
						<img
							src="/service/img2.svg"
							alt="Teamwork"
							class="object-cover"
						/>
					</div>
					<h3 class="text-lg font-bold mt-2">Visa Assistance</h3>
					<p class="text-sm text-gray-600 mt-2">
						Navigating international visa processes is made simple
						with our expert support. We assist with documentation,
						submission, and compliance, ensuring a hassle-free
						experience for candidates embarking on global careers.
					</p>
				</div>
				<!-- Card 3 -->
				<div
					class="p-6 w-72 h-64 rounded-lg shadow-md text-center relative bg-white"
				>
					<div
						class="w-12 h-12 mx-auto bg-[#D40000] text-white rounded-md flex items-center justify-center mb-4 absolute -top-5 left-1/2 -translate-x-1/2"
					>
						<img
							src="/service/img3.svg"
							alt="Teamwork"
							class="object-cover"
						/>
					</div>
					<h3 class="text-lg font-bold mt-2">
						Onboarding Assistance
					</h3>
					<p class="text-sm text-gray-600 mt-2">
						Transitioning to a new job and country can be
						challenging. Our onboarding support includes cultural
						orientation to ease adaptation, logistical assistance
						for relocation, and coordination for accommodations.
					</p>
				</div>
			</div>

			<div
				class="grid grid-cols-1 lg:grid-cols-3 mt-14 lg:mt-16 lg:gap-6 gap-y-14"
			>
				<!-- Card 1 -->
				<div
					class="p-6 w-72 h-64 rounded-lg shadow-md text-center relative bg-white"
				>
					<div
						class="w-12 h-12 mx-auto bg-[#D40000] text-white rounded-md flex items-center justify-center mb-4 absolute -top-5 left-1/2 -translate-x-1/2"
					>
						<img
							src="/service/img4.svg"
							alt="Teamwork"
							class="object-cover"
						/>
					</div>
					<h3 class="text-lg font-bold mt-2">
						Training and Development
					</h3>
					<p class="text-sm text-gray-600 mt-2">
						We empower professionals to excel in global markets
						through tailored training programs. From interview
						coaching to skill enhancement, we prepare candidates to
						meet international job standards.
					</p>
				</div>
				<!-- Card 2 -->
				<div
					class="p-6 w-72 h-64 rounded-lg shadow-md text-center relative bg-white"
				>
					<div
						class="w-12 h-12 mx-auto bg-[#D40000] text-white rounded-md flex items-center justify-center mb-4 absolute -top-5 left-1/2 -translate-x-1/2"
					>
						<img
							src="/service/img5.svg"
							alt="Teamwork"
							class="object-cover"
						/>
					</div>
					<h3 class="text-lg font-bold mt-2">
						Employer Support Services
					</h3>
					<p class="text-sm text-gray-600 mt-2">
						We provide global employers with end-to-end hiring
						solutions, including comprehensive candidate screening,
						thorough shortlisting, and efficient recruitment
						management.
					</p>
				</div>
				<!-- Card 3 -->
				<div
					class="p-6 w-72 h-64 rounded-lg shadow-md text-center relative bg-white"
				>
					<div
						class="w-12 h-12 mx-auto bg-[#D40000] text-white rounded-md flex items-center justify-center mb-4 absolute -top-5 left-1/2 -translate-x-1/2"
					>
						<img
							src="/service/img6.svg"
							alt="Teamwork"
							class="object-cover"
						/>
					</div>
					<h3 class="text-lg font-bold mt-2">
						Long-Term Relationship Building
					</h3>
					<p class="text-sm text-gray-600 mt-2">
						Navigating international visa processes is made simple
						with our expert support. We assist with documentation,
						submission, and compliance, ensuring a hassle-free
						experience.
					</p>
				</div>
			</div>
			<div
				class="grid grid-cols-1 lg:grid-cols-1 mt-14 lg:mt-16 lg:gap-6 gap-y-14 justify-center"
			>
				<!-- Card 2 -->
				<div
					class="p-6 w-72 h-64 rounded-lg shadow-md text-center relative bg-white mx-auto"
				>
					<div
						class="w-12 h-12 mx-auto bg-[#D40000] text-white rounded-md flex items-center justify-center mb-4 absolute -top-5 left-1/2 -translate-x-1/2"
					>
						<img
							src="/service/img2.svg"
							alt="Teamwork"
							class="object-cover"
						/>
					</div>
					<h3 class="text-lg font-bold mt-2">
						Abroad Education Assistance
					</h3>
					<p class="text-sm text-gray-600 mt-2">
						We provide comprehensive support for students aspiring
						to study overseas. From choosing the right university
						and course to visa documentation and application
						submission, our expert team ensures a seamless and
						hassle-free education abroad experience.
					</p>
				</div>
			</div>
		</section>
	</main>
	<div class="mx-7">
  <div
    class="bg-gradient-to-r mt-16 from-orange-600 via-orange-500 to-amber-400 rounded-lg p-8 text-white flex flex-col sm:flex-row items-start sm:items-center justify-between max-w-4xl mb-8 mx-auto shadow-lg"
  >
    <!-- Text Section -->
    <div>
      <h2 class="text-2xl font-bold">
        Ready to Take the First Step?
      </h2>
      <p class="mt-2 text-sm sm:text-base">
        Step into endless possibilities with Sastika Solutions.<br />
        Whether finding talent or chasing dreams abroad, we<br /> make
        it seamless and effortless.
      </p>
    </div>
    <br />
    <!-- Button -->
    <div class="flex">
      <a
        href="/contact"
        class="mt-4 sm:mt-0 sm:ml-4 bg-white text-orange-500 font-semibold py-2 px-6 rounded-full shadow-lg flex items-center space-x-2 hover:bg-gray-100 transition"
      >
        <span>Get in Touch</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-4 h-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9 5l7 7-7 7"
          ></path>
        </svg>
      </a>
    </div>
  </div>
</div>
	<Footer />
</Layout>
